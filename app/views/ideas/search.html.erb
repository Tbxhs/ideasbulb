<%= render :partial => "common/search_form",:locals => {:which_tab => "idea-search-tab" } %>
<% if @ideas && !@ideas.empty? %>
  <div id="search-ideas">
    <% @ideas.each do |idea| %>
	  <div>
		<div class="seperator"></div>
		<div class="idea-title"><%= link_to idea.title,idea_path("#{idea.id}-#{idea.title}"),:title=>idea.title%></div>
		<div class="idea-label">
          <%= status_span_tag idea %>
          <span><i class="icon-comment"></i>&nbsp;<%= idea.topic.name %></span>
          <% if idea.tags.any? %>
            <span><i class="icon-tags"></i>
              <% idea.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </span>
          <% end %>
          <span>解决方案(<%= idea.solutions_count %>)</span>
          <span>评论(<%= idea.comments_count %>)</span>
		</div>
	  </div>
    <% end %>
  </div>
<% else %>
  <p style="text-align:center">抱歉，没有结果。</p>
<% end %>
