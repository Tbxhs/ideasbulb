<%= flash_msg_tag flash[:alert],"alert-error" %>
<%= flash_msg_tag flash[:notice],"alert-success" %>
<ul class="nav nav-tabs" id="nav-status">
  <%= tab_item_tag IDEA_STATUS_UNDER_REVIEW,@status do %><%= link_to '新发布',tab_ideas_path(:status => IDEA_STATUS_UNDER_REVIEW),:remote=>true %><% end %>
  <%= tab_item_tag IDEA_STATUS_REVIEWED_SUCCESS,@status do %><%= link_to '投票中',tab_ideas_path(:status => IDEA_STATUS_REVIEWED_SUCCESS),:remote=>true  %><% end %>
  <%= tab_item_tag IDEA_STATUS_LAUNCHED,@status do %><%= link_to '已实施',tab_ideas_path(:status => IDEA_STATUS_LAUNCHED),:remote=>true  %><% end %>
</ul>
<div class="row">
  <div class="span2 offset7">
    <%= form_tag tab_ideas_path,:method => :get ,:remote => true,:id=>"ideas-sort-form" do %>    
      <%= select_tag(:sort, options_for_select([['最热门', IDEAS_SORT_HOT], ['最新的', IDEAS_SORT_NEWEST]]),:class=>"span2",:id=>"ideas-sort-select") %>
    <% end %>
  </div>
</div>
<div id="ideas-main">
  <%= render @ideas %>
  <%= will_paginate @ideas,:class => "pagination pagination-right",:id => "ideas-pagination",:params => {:controller => "ideas",:action => "tab",:status => IDEA_STATUS_REVIEWED_SUCCESS} %>
</div>
