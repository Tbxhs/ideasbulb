<% title "主意 - #{@idea.title} - #{@site.name}" %>
<%= flash_msg_tag flash[:alert],"alert-error" %>
<%= handle_idea_button @idea %>
<% if @idea.favorers.count > 0%>
  <h4><span class="plain"><%= @idea.favorers.count %></span> 人关注了此主意</h4>
  <ul class="unstyled favor-avatar">
    <% @idea.favorers.each do |favorer| %>
      <li><%= link_to image_tag(favorer.avatar.url(:thumb),:class=>"profile_picture_small"),user_path(favorer),:title => favorer.username %></li>
    <% end %>
  </ul>
<% end %>
<div id="idea-main"><%= render @idea %></div>

