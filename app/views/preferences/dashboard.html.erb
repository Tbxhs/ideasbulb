<% title "首页 - 控制面板" %>
<div class="span3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="active"><%= link_to dashboard_preferences_path do %><i class="icon-home icon-white"></i> 首页<% end %></li>
	  <li><%= link_to topics_path do %><i class="icon-list"></i> 话题管理<% end %></li>
	  <li><%= link_to users_path do %><i class="icon-user"></i> 用户管理<% end %></li>
	  <li><%= link_to preferences_path do %><i class="icon-cog"></i> 站点设置<% end %></li>
    </ul>
  </div>
</div>
<div class="span9" id="admin-main">
  <div class="page-header">
    <h1>控制面板首页</h1>
  </div>
  <div class="row">
    <div class="span10">
      <h3>新发布的主意，一周统计</h3>
      <table class="table table-bordered table-condensed">
        <tr>
          <% @new_ideas_week.each_key do |day| %>
            <th><%= day %></th>
          <% end %>
        </tr>
        <tr>
          <% @new_ideas_week.each_value do |count| %>
            <td><%= count %></td>
          <% end %>
        </tr>
      </table>
      <h3>新注册的用户，一周统计</h3>
      <table class="table table-bordered table-condensed">
        <tr>
          <% @new_users_week.each_key do |day| %>
            <th><%= day %></th>
          <% end %>
        </tr>
        <tr>
          <% @new_users_week.each_value do |count| %>
            <td><%= count %></td>
          <% end %>
        </tr>
      </table>
      <h3>主意数量统计</h3>
      <table class="table table-bordered table-condensed">
        <tr>
          <th><%= t('app.idea.status.under_review')%></th>
          <th><%= t('app.idea.status.reviewed_success')%></th>
          <th><%= t('app.idea.status.launched')%></th>
        </tr>
        <tr>
          <td><%= Idea.where("status = ?",IDEA_STATUS_UNDER_REVIEW).count %></td>
          <td><%= Idea.where("status = ?",IDEA_STATUS_REVIEWED_SUCCESS).count %></td>
          <td><%= Idea.where("status = ?",IDEA_STATUS_LAUNCHED).count %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
