<% title "站点设置 - 控制面板" %>
<%= render :partial => "common/dashboard_menu",:locals => {:which_menu => "cog" } %>
<div class="span9" id="admin-main">
  <div class="page-header">
    <h1>站点设置</h1>
  </div>
  <%= form_tag update_basic_preferences_path,:method => :put,:remote => true,:class => "form-horizontal",:id => "preference-form" do %>
    <fieldset>
      <div class="control-group">
        <%= label_tag "website-name-input",t("app.preference.site_name"),:class=> "control-label" %>
        <div class="controls">
          <%= text_field_tag(:preference_site_name,Preference.option(PREFERENCE_SITE_NAME),:class=>"input-xlarge",:id=>"website-name-input") %>
          <p class="help-block">显示在顶部导航栏里和页面标题</p>
        </div>
      </div>
      <div class="form-actions">
        <%= submit_tag "修改",:class=>"btn btn-primary",:disable_with => "修改中..." %>
      </div>
    </fieldset>
  <% end %>
</div>
